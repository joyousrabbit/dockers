FROM pytorch/pytorch:1.8.1-cuda11.1-cudnn8-runtime

RUN pip install opencv-python==4.1.2.30
RUN apt-get update && \
    apt-get install -y \
        libgl1-mesa-glx \
        libglib2.0-0 \
        libsm6 \
        libxext6 \
        libxrender-dev
        
RUN apt-get install -y curl

ARG PYCHARM_VERSION=2021.1
ARG PYCHARM_BUILD=211.6693.77
ARG pycharm_source=https://download.jetbrains.com/python/pycharm-community-${PYCHARM_BUILD}.tar.gz

WORKDIR /opt/pycharm

RUN curl -fsSL $pycharm_source -o /opt/pycharm/installer.tgz \
  && tar --strip-components=1 -xzf installer.tgz \
  && rm installer.tgz
  
RUN apt-get install -y libxtst-dev libxext-dev libxrender-dev libfreetype6-dev \
  libfontconfig1 libgtk2.0-0 libxslt1.1 libxxf86vm1
  
RUN pip install scipy
RUN pip install matplotlib
RUN pip install tensorboard
